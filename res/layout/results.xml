<?xml version="1.0" encoding="utf-8"?>

<com.aeskreis.wordfinder.ResultsView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/results">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Letters: "
            android:id="@+id/textView" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TilesValues"
            android:id="@+id/letters_values" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Constraints:"
            android:id="@+id/textView2" android:layout_gravity="top"
            android:textStyle="bold"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="top"
            android:id="@+id/constraints_values">
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results:"
            android:id="@+id/resultsLabel" android:layout_gravity="top"
            android:textStyle="bold"/>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/results_data" android:layout_gravity="top">
        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/results_table">
        </TableLayout>
    </ScrollView>
</com.aeskreis.wordfinder.ResultsView>