<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    <com.aeskreis.wordfinder.SearchView
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:id="@+id/main"
            >
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Enter your 7 tiles (? for wildcards):"
                android:id="@+id/textView" android:layout_gravity="left|center_vertical"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/tiles" android:layout_gravity="left|center_vertical" android:maxLength="7"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Enter only the board letter(s) you wish to use:"
                android:id="@+id/textView" android:layout_gravity="left|center_vertical"/>
        <EditText
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:id="@+id/board_letters" android:layout_gravity="left|center_vertical"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_gravity="left|center_vertical"
                    android:id="@+id/constraints">
            </LinearLayout>


        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Constraint"
                android:id="@+id/add_constraint" android:layout_gravity="left|center_vertical"
                android:tag="add_constraint"/>
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp" android:layout_gravity="left|center_vertical">
        </FrameLayout>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Minimum Length:"
                android:id="@+id/textView" android:layout_gravity="left|center_vertical"/>
        <Spinner android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:id="@+id/min_length"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Maximum Length:"
                android:id="@+id/textView" android:layout_gravity="left|center_vertical"/>
        <Spinner android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/max_length" />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/search" android:layout_gravity="left|center_vertical"
                android:tag="search"/>
    </com.aeskreis.wordfinder.SearchView>
</ScrollView>

